<!--you can style days differently by different classes generated by day[1]-->
<div class="day-div <%= day[1] %>">
    <div class="day-box">
        <!--here we get the day of the month formatted to an integer e.g 1,14,29-->
        <%= day[0].strftime("%d")%>
        <!--the following span is only shown on screen size lower than 767px for the day of the week-->
        <span class="day-name"><%= day[0].strftime("%^a") %></span>
    </div>
</div>